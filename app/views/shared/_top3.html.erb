<ul>
  <% @watches.each do |watch| %>
  <div>
    <% bar_function = ((watch.total_watch_time / @absolute_total) * 100).to_i %>
    <li class="top3-bar">
      <div class="bar-item">
        <div style="display: flex;">
          <img src="<% watch.creator.avatar %>" class="img-bar">
          <h4>LinkUpTV</h4>
        </div>
        <div class="bar-container" style="background-color: rgba(<%= @color_function %>,0.3); " >
          <div class="hiddenbar-container">
            <div style="background-color: rgb(<%=@color_function%>); width:     <%= bar_function %>%; height: 20px; border-radius:10px; ">
              <h6>
                <%= bar_function %>%
              </h6>
            </div>
          </div>
        </div>
      </div>
    </li>
  </div>
  <hr>
  <% end%>
</ul>




