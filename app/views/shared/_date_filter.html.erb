<div class="container-date-filter">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

    <%= simple_form_for :search, method: "get" do |f| %>

      <%= f.input :starts_at, label: "Pick a date", as: :string, required: false, input_html: {class: "datepicker"} %>
      <div class="date-filter">
      <%= f.hidden_field :ends_at, as: :string, required: false, input_html: {class: "datepicker"}%>

      <%= f.button :submit, "Go", class: "btn btn-date" %>
      </div>
    <% end %>
  </div>
</div>


