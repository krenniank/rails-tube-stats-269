
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['sankey']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'From');
        data.addColumn('string', 'To');
        data.addColumn('number', 'Weight');
        data.addRows([
          <% Video.categories.each do |category| %>
          [ '<%= Watch.absolute_total_time(@youtube_account)/60 %> Minutes', '<%= category %>', <%= Watch.watch_time_of_category(@youtube_account, category)/60 %>],
          <% end %>
        ]);

      // Sets chart options.
      // Sets chats collors.
      var colors = ['#a6cee3', '#b2df8a', '#F4F4F4', '#FF0000',
              '#F8E9A1', '#ffff99', '#374785', '#24305E'];
    var options = {
      width: 900,
      height: 300,
       sankey: {
       node: {
       colors: colors
 },
   link: {
   colorMode: 'gradient',
   colors: colors
    }
   }
  };


        // Instantiates and draws our chart, passing in some options.
        var chart = new google.visualization.Sankey(document.getElementById('sankey_basic'));
        chart.draw(data, options);
      }
    </script>
    <div id="sankey_basic" style="width: 900px; height: 300px;"></div>
